    <!-- Accents and Background -->
    <color name="anand_dark">#000000</color>
    <color name="anand_dark_accent">#ff00cef2</color>

    <!-- Background floating -->
    <color name="background_floating_material_dark">@color/anand_dark</color>
    <color name="background_leanback_dark">@color/anand_dark</color>

    <!-- Notification action button -->
    <color name="notification_action_list">@color/anand_dark</color>
    <color name="notification_mtrl_big_picture_bg">@color/anand_dark</color>
    <color name="notification_default_color">@color/anand_dark_accent</color>
    <color name="system_notification_accent_color">@color/anand_dark_accent</color>
    <color name="notification_text_default_color">@android:color/anand_dark_accent</color>
    <color name="sender_text_color">#FFFFFFFF</color>

    <!-- System - Accents -->
    <color name="accent_material_dark">@*android:color/anand_dark_accent</color>
    <color name="app_permission_icon_tint">@*android:color/anand_dark_accent</color> 

